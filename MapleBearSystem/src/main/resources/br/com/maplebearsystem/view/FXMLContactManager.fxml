<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="primaryPane" dividerPositions="0.5"
	styleClass="DWORDefaultPaneBackground"
	stylesheets="@FXMLStylesheet.css"
	xmlns="http://javafx.com/javafx/8.0.171"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="br.com.maplebearsystem.view.controller.FXMLContactManagerController">
	<items>
		<VBox id="pnSearch" fx:id="pnSearch" spacing="14.0"
			styleClass="parent">
			<children>
				<Label styleClass="DWORScreenTitleII" text="Busca de Contatos" />
				<HBox alignment="CENTER" spacing="15.0">
					<children>
						<JFXTextField fx:id="tfieldSearch"
							labelFloat="true" onAction="#actSPSearch" prefHeight="30.0"
							promptText="Insira o termo de busca" HBox.hgrow="ALWAYS">
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</JFXTextField>
						<JFXButton fx:id="btnSPSearch" buttonType="RAISED"
							onAction="#actSPSearch" prefHeight="45.0" ripplerFill="#282a2f"
							text="Busca">
							<HBox.margin>
								<Insets />
							</HBox.margin>
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonCompact" />
							</styleClass>
						</JFXButton>
					</children>
				</HBox>
				<TableView fx:id="tviewPessoas" VBox.vgrow="ALWAYS">
					<columns>
						<TableColumn fx:id="tviewColID" editable="false"
							maxWidth="-1.0" minWidth="35.0" prefWidth="60.0" text="ID" />
						<TableColumn fx:id="tviewColName" editable="false"
							maxWidth="1.7976931348623157E308" minWidth="60.0"
							prefWidth="-1.0" text="Nome" />
						<TableColumn fx:id="tviewColCPF" maxWidth="-1.0"
							minWidth="120.0" prefWidth="180.0" text="CPF" />
						<TableColumn fx:id="tviewColCNPJ" maxWidth="-1.0"
							minWidth="150.0" prefWidth="180.0" text="CNPJ" />
					</columns>
					<columnResizePolicy>
						<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
					</columnResizePolicy>
				</TableView>
				<HBox alignment="CENTER" spacing="14.0">
					<children>
						<JFXButton fx:id="btnSPNew" buttonType="RAISED"
							layoutX="10.0" layoutY="10.0" onAction="#actSPNew"
							prefWidth="150.0" ripplerFill="#282a2f" text="Novo">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<graphic>
								<FontAwesomeIconView fill="WHITE"
									glyphName="PLUS" size="20" />
							</graphic>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonAccept" />
								<String fx:value="JFXButtonCompactII" />
							</styleClass>
						</JFXButton>
						<JFXButton fx:id="btnSPEdit" buttonType="RAISED"
							onAction="#actSPEdit" prefWidth="150.0" ripplerFill="#282a2f"
							text="Editar">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<HBox.margin>
								<Insets />
							</HBox.margin>
							<graphic>
								<FontAwesomeIconView fill="WHITE"
									glyphName="PENCIL" size="20" />
							</graphic>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonCompactII" />
							</styleClass>
						</JFXButton>
						<JFXButton fx:id="btnSPDelete" buttonType="RAISED"
							onAction="#actSPDelete" prefWidth="150.0" ripplerFill="#282a2f"
							text="Deletar">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<HBox.margin>
								<Insets />
							</HBox.margin>
							<graphic>
								<FontAwesomeIconView fill="WHITE"
									glyphName="TRASH_ALT" size="20" />
							</graphic>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonDelete" />
								<String fx:value="JFXButtonCompactII" />
							</styleClass>
						</JFXButton>
					</children>
					<VBox.margin>
						<Insets />
					</VBox.margin>
				</HBox>
			</children>
			<padding>
				<Insets bottom="14.0" left="14.0" right="14.0" top="14.0" />
			</padding>
		</VBox>
		<VBox id="pnEdit" fx:id="pnEdit" alignment="TOP_CENTER"
			styleClass="parent">
			<children>
				<Label styleClass="DWORScreenTitleII"
					text="Cadastro do Contato" />
				<HBox fx:id="pnRdbtLegal" alignment="CENTER" prefWidth="200.0"
					styleClass="formMaxWidth" VBox.vgrow="NEVER">
					<children>
						<JFXRadioButton id="rdbtnPessoaFisica"
							fx:id="rdbtPessoaFisica" lineSpacing="20.0" styleClass="radiobtn"
							text="Pessoa Fisica">
							<HBox.margin>
								<Insets left="10.0" right="20.0" />
							</HBox.margin>
							<toggleGroup>
								<ToggleGroup fx:id="rdbtGroupLegal" />
							</toggleGroup>
						</JFXRadioButton>
						<JFXRadioButton id="rdbtnPessoaJuridica"
							fx:id="rdbtPessoaJuridica" lineSpacing="20.0"
							styleClass="radiobtn" text="Pessoa Juridica"
							toggleGroup="$rdbtGroupLegal">
							<HBox.margin>
								<Insets left="10.0" right="20.0" />
							</HBox.margin>
						</JFXRadioButton>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</HBox>
				<fx:include fx:id="pnContactForm"
					source="component/FXMLContactForm.fxml" />
				<HBox alignment="BOTTOM_CENTER" prefHeight="38.0"
					prefWidth="338.0" spacing="14.0" VBox.vgrow="ALWAYS">
					<VBox.margin>
						<Insets />
					</VBox.margin>
					<children>
						<JFXButton fx:id="btSave" buttonType="RAISED"
							disable="true" onAction="#actSave" prefHeight="45.0"
							ripplerFill="#282a2f" styleClass="JFXButtonDefault" text="Salvar">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
						</JFXButton>
						<JFXButton fx:id="btDelete" buttonType="RAISED"
							disable="true" onAction="#actDelete" prefHeight="45.0"
							ripplerFill="#282a2f" text="Deletar">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonDelete" />
							</styleClass>
						</JFXButton>
						<JFXButton fx:id="btCancel" buttonType="RAISED"
							onAction="#actCancel" prefHeight="45.0" ripplerFill="#282a2f"
							text="Cancelar">
							<effect>
								<DropShadow blurType="GAUSSIAN" height="30.0"
									radius="14.5" width="30.0" />
							</effect>
							<styleClass>
								<String fx:value="JFXButtonDefault" />
								<String fx:value="JFXButtonCancel" />
							</styleClass>
						</JFXButton>
					</children>
				</HBox>
			</children>
			<padding>
				<Insets bottom="14.0" top="14.0" />
			</padding>
		</VBox>
	</items>
</SplitPane>
