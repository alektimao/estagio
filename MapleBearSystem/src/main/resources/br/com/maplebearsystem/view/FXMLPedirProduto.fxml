<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXDatePicker?>
<?import com.jfoenix.controls.JFXTabPane?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane minHeight="600.0" minWidth="780.0" stylesheets="@FXMLStylesheet.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.maplebearsystem.view.FXMLPedidoController">
   <center>
      <StackPane fx:id="rootPane" BorderPane.alignment="CENTER">
         <children>
            <VBox fx:id="panelMain" spacing="15.0" style="-fx-background-color: white;">
               <children>
                  <Label text="Requisiçao de Produtos" textFill="#545454">
                     <font>
                        <Font name="System Bold Italic" size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="TOP_CENTER" spacing="15.0">
                     <children>
                        <HBox alignment="CENTER" maxWidth="780.0" spacing="15.0" style="-fx-border-color: lightgrey;" HBox.hgrow="SOMETIMES">
                           <children>
                              <FlowPane hgap="15.0" vgap="20.0" HBox.hgrow="SOMETIMES">
                                 <children>
                                    <JFXTextField id="tfieldName" fx:id="tfieldnome" labelFloat="true" minWidth="275.0" prefHeight="26.0" promptText="Descricao do pedido">
                                       <styleClass>
                                          <String fx:value="jfxtextfieldform" />
                                          <String fx:value="formMaxWidth" />
                                       </styleClass>
                                       <FlowPane.margin>
                                          <Insets />
                                       </FlowPane.margin>
                                    </JFXTextField>
                                 </children>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="15.0" />
                                 </padding>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </FlowPane>
                              <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="5.0" maxWidth="200.0" prefWidth="148.0" vgap="5.0">
                                 <children>
                                    <JFXButton fx:id="btbusca" buttonType="RAISED" minHeight="33.0" minWidth="53.0" prefHeight="33.0" prefWidth="53.0" ripplerFill="#282a2f" style="-fx-text-fill: white;" text="Buscar">
                                       <styleClass>
                                          <String fx:value="JFXButtonCompact" />
                                          <String fx:value="JFXButtonDefault" />
                                       </styleClass>
                                    </JFXButton>
                                 </children>
                              </FlowPane>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </HBox>
                     </children>
                  </HBox>
                  <JFXTabPane style="-fx-background-color: FAFAFA;" stylesheets="@FXMLStylesheet.css" VBox.vgrow="ALWAYS">
                     <tabs>
                        <Tab closable="false" text="Produtos">
                           <content>
                              <HBox alignment="CENTER" spacing="15.0">
                                 <children>
                                    <VBox alignment="CENTER" maxWidth="1000.0" spacing="10.0" HBox.hgrow="ALWAYS">
                                       <children>
                                          <VBox minHeight="250.0" spacing="10.0" style="-fx-background-color: white;" VBox.vgrow="ALWAYS">
                                             <children>
                                                <Label text="Produtos" />
                                                <VBox spacing="10.0" VBox.vgrow="ALWAYS">
                                                   <children>
                                                      <TableView fx:id="tviewProducts" editable="true" prefHeight="214.0" prefWidth="690.0">
                                                        <columns>
                                                          <TableColumn fx:id="colproduto" minWidth="-1.0" prefWidth="297.0" text="Produto" />
                                                            <TableColumn fx:id="colqtd" minWidth="-1.0" prefWidth="99.0" text="Qtde. Estoque" />
                                                            <TableColumn fx:id="colqtdpedido" minWidth="-1.0" prefWidth="98.0" text="Qtde. Pedido" />
                                                          <TableColumn fx:id="colvalor" minWidth="-1.0" prefWidth="98.0" text="Valor" />
                                                            <TableColumn fx:id="coltotal" maxWidth="500.0" minWidth="-1.0" prefWidth="95.0" text="Valor Total" />
                                                        </columns>
                                                      </TableView>
                                                      <HBox alignment="CENTER_RIGHT" spacing="15.0" />
                                                      <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="234.0" spacing="15.0">
                                                         <children>
                                                            <JFXButton fx:id="btadd1" buttonType="RAISED" minHeight="35.0" minWidth="100.0" onAction="#addproduto" prefWidth="100.0" ripplerFill="#282a2f" style="-fx-background-color: green; -fx-text-fill: white;" text="Adicionar">
                                                               <graphic>
                                                                  <FontAwesomeIconView fill="WHITE" glyphName="PLUS" size="16" />
                                                               </graphic>
                                                            </JFXButton>
                                                            <JFXButton fx:id="btremover1" buttonType="RAISED" minHeight="35.0" minWidth="100.0" onAction="#removerproduto" prefWidth="100.0" ripplerFill="#282a2f" style="-fx-text-fill: white;" styleClass="JFXButtonCancel" text="Remover">
                                                               <graphic>
                                                                  <FontAwesomeIconView fill="WHITE" glyphName="TRASH" size="16" />
                                                               </graphic>
                                                            </JFXButton>
                                                         </children>
                                                      </HBox>
                                                   </children>
                                                </VBox>
                                             </children>
                                             <effect>
                                                <DropShadow />
                                             </effect>
                                             <padding>
                                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                             </padding>
                                          </VBox>
                                          <VBox spacing="30.0" style="-fx-background-color: white;">
                                             <children>
                                                <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="10.0" vgap="25.0">
                                                   <children>
                                                      <VBox alignment="CENTER_LEFT" spacing="5.0">
                                                         <children>
                                                            <Label text="Data da Requisição:" />
                                                            <JFXDatePicker fx:id="dtdiapedido" />
                                                         </children>
                                                      </VBox>
                                                      <VBox alignment="CENTER_LEFT" spacing="5.0">
                                                         <children>
                                                            <Label text="Data Prevista de Entrega:" />
                                                            <JFXDatePicker fx:id="dtdiaentrega" />
                                                         </children>
                                                      </VBox>
                                                      <VBox alignment="CENTER_LEFT" spacing="5.0">
                                                         <children>
                                                            <Label text="Frete" />
                                                            <JFXTextField fx:id="txtfrete" />
                                                         </children>
                                                      </VBox>
                                                      <VBox alignment="CENTER_LEFT" spacing="5.0">
                                                         <children>
                                                            <Label text="Valor Total" />
                                                            <JFXTextField fx:id="txtvalor" />
                                                         </children>
                                                      </VBox>
                                                   </children>
                                                </FlowPane>
                                             </children>
                                             <padding>
                                                <Insets bottom="20.0" left="15.0" right="15.0" top="15.0" />
                                             </padding>
                                             <effect>
                                                <DropShadow />
                                             </effect>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </content>
                        </Tab>
                        <Tab closable="false" text="Obsevações">
                           <content>
                              <HBox alignment="CENTER">
                                 <children>
                                    <VBox minWidth="700.0" spacing="30.0" style="-fx-background-color: white;">
                                       <children>
                                          <VBox prefHeight="100.0" spacing="10.0" VBox.vgrow="SOMETIMES">
                                             <children>
                                                <Label text="Observações" />
                                                <JFXTextArea maxHeight="300.0" minHeight="40.0" prefHeight="40.0" text="&#10;" VBox.vgrow="ALWAYS" />
                                             </children>
                                          </VBox>
                                       </children>
                                       <effect>
                                          <DropShadow />
                                       </effect>
                                       <padding>
                                          <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                                 <padding>
                                    <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                                 </padding>
                              </HBox>
                           </content>
                        </Tab>
                     </tabs>
                  </JFXTabPane>
                  <HBox alignment="CENTER" spacing="15.0">
                     <children>
                        <JFXButton buttonType="RAISED" layoutX="250.0" layoutY="10.0" minHeight="50.0" minWidth="80.0" onAction="#salvarpedido" ripplerFill="#282a2f" style="-fx-text-fill: white;" styleClass="JFXButtonDefault" text="Salvar" />
                        <JFXButton buttonType="RAISED" minHeight="50.0" minWidth="80.0" onAction="#voltar" ripplerFill="#282a2f" style="-fx-background-color: orange; -fx-text-fill: white;" text="Cancelar" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
