<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="rootPane" spacing="14.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.maplebearsystem.view.component.FXMLPhoneFormController">
   <children>
      <VBox>
         <children>
            <Label text="Telefone" />
            <JFXTextField fx:id="tfieldPhone" maxWidth="-Infinity" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label text="Operadora" />
            <JFXTextField fx:id="tfieldTelecomCompany" />
         </children>
      </VBox>
      <HBox HBox.hgrow="ALWAYS" />
      <VBox HBox.hgrow="SOMETIMES">
         <children>
            <Label text="Categoria" />
            <JFXComboBox fx:id="cmbboxPhoneType" promptText="Categoria do telefone" />
         </children>
      </VBox>
   </children>
</HBox>
